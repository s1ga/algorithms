{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "ES2019",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}